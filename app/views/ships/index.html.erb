<div class="container">
  <div class="row timeline-full-page">
    <div class="col-md-4 col-sm-5 timeline-left">
      <div class="user-info-stuff">
        <div class="row user-info-row">
          <div class="col-md-4 col-sm-4 col-xs-3 user-avatar">
            <%= link_to image_tag('https://unsplash.it/68/68/?random'), user_path(current_user), class: "img-responsive img-rounded" %>
          </div>
          <div class="col-md-8 col-sm-8 col-xs-4 user-text">
            <h4>@<%= link_to @user.username, user_path(current_user) %></h4>
          </div>
        </div>
        <div class="row user-stats">
          <div class="col-md-3 col-sm-3 col-xs-3 user-ships">
            <p>SHIPS</p>
            <h4><%= @user.ships.count %></h4>
          </div>
          <div class="col-md-4 col-sm-5 col-xs-4 user-following">
            <p>FOLLOWING</p>
            <h4><%= @user.followees_count %></h4>
          </div>
          <div class="col-md-4 col-sm-4 col-xs-4 user-followers">
            <p>FOLLOWERS</p>
            <h4><%= @user.followers_count %></h4>
          </div>
        </div>
      </div>
      <ul class="list-inline text-right">
        <div class="follow_logic">
          <%= render partial: 'users/login_logout' %>
        </div>
      </ul>
      <div class="row create-ship text-right">
          <%= button_to "Ship it!", new_user_ship_path(current_user), class: "btn btn-lg btn-info pull-right", method: "get" %>
      </div>
    </div>
    <div class="col-md-7 col-sm-6 timeline-right">
      <% if no_timeline(@user) %>
        <p class="text-center">You're not following anyone yet :(</p>
        <p><%= link_to "Let's fix that.", user_users_path(@user) %></p>
      <% else %>
        <%= render @ships %>
      <% end %>
      <div class="row">
        <%= paginate @ships %>
      </div>
    </div>
  </div>
</div>
